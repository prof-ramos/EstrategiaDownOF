# Exemplo de arquivo .env para docker-compose
# Copie para .env e ajuste conforme necessário

# Número de workers para downloads paralelos
WORKERS=8

# Diretório de download (relativo ao host)
DOWNLOAD_DIR=./downloads

# Timezone
TZ=America/Sao_Paulo

# Modo headless (true/false)
HEADLESS=true

# Configurações de recursos Docker
CPU_LIMIT=4.0
MEMORY_LIMIT=4G
CPU_RESERVATION=2.0
MEMORY_RESERVATION=2G

# Python
PYTHONUNBUFFERED=1
PYTHONDONTWRITEBYTECODE=1

# Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO
